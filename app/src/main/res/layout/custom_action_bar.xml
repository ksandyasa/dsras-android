<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize"
    >

    <RelativeLayout
        android:layout_width="36dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/iv_close_action_bar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_close"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_icon_action_bar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_hamburger"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_centerInParent="true"
        android:paddingLeft="36dp"
        android:animateLayoutChanges="true"
        >

        <EditText
            android:id="@+id/ed_search_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorCustomGreen"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:hint="Search"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:layout_marginLeft="24dp"
            />

        <TextView
            android:id="@+id/tv_title_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorCustomGreen"
            android:text="@string/action_bar_title"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_search_action_bar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_search"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</RelativeLayout>