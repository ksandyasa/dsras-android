<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp" android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorCustomGrey"
        android:textStyle="bold"
        android:text="You can change your profile information here"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        />

    <LinearLayout
        android:id="@+id/ll_name_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/iv_name_changeprofile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_user"
            android:layout_marginLeft="5dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name_changeprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/ed_name_changeprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorCustomGreen"
                android:hint="NAME"
                android:gravity="center_vertical"
                android:background="@color/colorTransparent"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_border1_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorCustomGreen"
        />

    <LinearLayout
        android:id="@+id/ll_email_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/iv_email_changeprofile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_email"
            android:layout_marginLeft="5dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email_changeprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/ed_email_changeprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorCustomGreen"
                android:hint="EMAIL"
                android:gravity="center_vertical"
                android:background="@color/colorTransparent"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_border2_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorCustomGreen"
        />

    <LinearLayout
        android:id="@+id/ll_phone_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/iv_phone_changeprofile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_phone"
            android:layout_marginLeft="5dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone_changeprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/ed_phone_changeprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorCustomGreen"
                android:hint="PHONE"
                android:gravity="center_vertical"
                android:background="@color/colorTransparent"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_border3_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorCustomGreen"
        />

    <Button
        android:id="@+id/btn_submit_changeprofile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorWhite"
        android:text="SAVE PROFILE"
        android:background="@drawable/btn_login_normal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

</LinearLayout>