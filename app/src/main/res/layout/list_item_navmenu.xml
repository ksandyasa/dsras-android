<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="16dp" android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/iv_icon_item_navmenu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_hamburger"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tv_title_item_navmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorCustomGreen"
        android:text="Title"
        android:layout_toRightOf="@id/iv_icon_item_navmenu"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>